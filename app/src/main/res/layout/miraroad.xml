<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.AllLocations.Bandra"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:text="@string/turfs"
            android:textSize="60sp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorPrimaryDark"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/browser_actions_bg_grey">

            <ImageButton
                android:id="@+id/turf6"
                android:layout_width="188dp"
                android:layout_height="140dp"
                android:layout_alignEnd="@id/turfit"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="-200dp"
                android:contentDescription="@string/sporting"
                android:src="@drawable/turfit1" />
            <Button
                android:id="@+id/turf6_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select"
                android:layout_below="@id/turfit"
                android:gravity="center"
                android:layout_marginStart="60dp"/>

            <TextView
                android:id="@+id/turfit"
                android:layout_width="205dp"
                android:layout_height="95dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="208dp"
                android:gravity="center"
                android:text="Turf it up"
                android:textAlignment="center"
                android:textSize="25sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/browser_actions_bg_grey">

            <ImageButton
                android:id="@+id/turf8"
                android:layout_width="188dp"
                android:layout_height="140dp"
                android:layout_alignEnd="@id/dugout"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="-200dp"
                android:contentDescription="@string/sporting"
                android:src="@drawable/dugoutf1" />
            <Button
                android:id="@+id/turf8_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select"
                android:layout_below="@id/dugout"
                android:gravity="center"
                android:layout_marginStart="60dp"/>

            <TextView
                android:id="@+id/dugout"
                android:layout_width="205dp"
                android:layout_height="95dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="208dp"
                android:gravity="center"
                android:text="Dugout"
                android:textAlignment="center"
                android:textSize="25sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/browser_actions_bg_grey">

            <ImageButton
                android:id="@+id/turf9"
                android:layout_width="188dp"
                android:layout_height="140dp"
                android:layout_alignEnd="@id/pgvora"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="-200dp"
                android:contentDescription="@string/sporting"
                android:src="@drawable/pgvora1" />

            <Button
                android:id="@+id/turf9_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pgvora"
                android:layout_marginStart="60dp"
                android:gravity="center"
                android:text="Select" />

            <TextView
                android:id="@+id/pgvora"
                android:layout_width="205dp"
                android:layout_height="95dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="208dp"
                android:gravity="center"
                android:text="PG Vora Turf"
                android:textAlignment="center"
                android:textSize="25sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/browser_actions_bg_grey">

            <ImageButton
                android:id="@+id/turf11"
                android:layout_width="188dp"
                android:layout_height="140dp"
                android:layout_alignEnd="@id/stxaviers"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="-200dp"
                android:contentDescription="@string/sporting"
                android:src="@drawable/xaviers3" />

            <Button
                android:id="@+id/turf11_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/stxaviers"
                android:layout_marginStart="60dp"
                android:gravity="center"
                android:text="Select" />

            <TextView
                android:id="@+id/stxaviers"
                android:layout_width="205dp"
                android:layout_height="95dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="208dp"
                android:gravity="center"
                android:text="St Xaviers Turf"
                android:textAlignment="center"
                android:textSize="25sp" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>